# Test Environment Configuration
# This file is for testing only - uses mock values

# OpenAI API - will be mocked in tests
OPENAI_API_KEY=sk-proj-1234567890abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOP

# Security - Test secrets (minimum length requirements met)
JWT_SECRET_KEY=test-jwt-secret-key-minimum-32-characters-long-for-testing
SECRET_KEY=test-flask-session-secret-key-for-testing-only

# Authentication - Test API Keys
API_KEY_ADMIN=test-admin-key-12345:admin
API_KEY_USER=test-user-key-67890:api_user

# Database - Use SQLite for testing
DATABASE_URL=sqlite:///./test_ai_gatekeeper.db

# Connection Pool Settings (smaller for testing)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=10
DB_POOL_RECYCLE=3600

# Database Debugging
DATABASE_DEBUG=false
DATABASE_DEBUG_POOL=false

# AI Gatekeeper Configuration
CONFIDENCE_THRESHOLD=0.8
RISK_THRESHOLD=0.3
ENABLE_SWARM_INTELLIGENCE=false
MAX_ESCALATION_TIME=1800
ENABLE_LEARNING_UPDATES=false
FEEDBACK_REQUIRED_FOR_LEARNING=true

# Rate Limiting - In-memory for testing
RATE_LIMIT_STORAGE_URI=memory://

# Logging
LOG_LEVEL=INFO
ENVIRONMENT=development
LOG_DIR=/tmp/ai-gatekeeper-test-logs

# Flask Configuration
FLASK_DEBUG=false
HOST=127.0.0.1
PORT=5000

# Monitoring
AI_COST_ALERT_THRESHOLD=50.0

# Timeout Configuration (from new features)
REQUEST_TIMEOUT=120
OPENAI_TIMEOUT=60

# Security Headers (from new features)
CSP_ENABLED=true
HSTS_ENABLED=false
HSTS_MAX_AGE=31536000

# OpenTelemetry (from new features)
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=ai-gatekeeper-test
SKIP_SECRET_VALIDATION=true
