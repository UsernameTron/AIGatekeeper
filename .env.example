# AI Gatekeeper Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ==============================================================================
# REQUIRED - Application will not start without these
# ==============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Security - JWT Authentication
# Must be at least 32 characters long
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-characters-long

# Security - Flask Session Secret
# Must be different from JWT_SECRET_KEY
SECRET_KEY=your-flask-session-secret-key-here

# ==============================================================================
# AUTHENTICATION - API Keys
# ==============================================================================

# Admin API Key (format: API_KEY_<NAME>=<key>:<role>)
API_KEY_ADMIN=admin-key-your-random-string:admin

# User API Key
API_KEY_USER=user-key-your-random-string:api_user

# Additional API Keys (add as needed)
# API_KEY_SERVICE1=service1-key:api_user
# API_KEY_SERVICE2=service2-key:read_only

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# Database URL (PostgreSQL recommended for production)
DATABASE_URL=postgresql://localhost/ai_gatekeeper
# For SQLite (development only):
# DATABASE_URL=sqlite:///./ai_gatekeeper.db

# Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Database Debugging (set to true for SQL query logging)
DATABASE_DEBUG=false
DATABASE_DEBUG_POOL=false

# ==============================================================================
# AI GATEKEEPER CONFIGURATION
# ==============================================================================

# Confidence Threshold (0.0-1.0) - automation trigger
CONFIDENCE_THRESHOLD=0.8
# Alternative name (same setting):
# SUPPORT_CONFIDENCE_THRESHOLD=0.8

# Risk Threshold (0.0-1.0) - escalation trigger
RISK_THRESHOLD=0.3
# Alternative name (same setting):
# SUPPORT_RISK_THRESHOLD=0.3

# Enable Swarm Intelligence (multi-agent collaboration)
ENABLE_SWARM_INTELLIGENCE=true

# Max Escalation Time (seconds)
MAX_ESCALATION_TIME=1800

# Learning Settings
ENABLE_LEARNING_UPDATES=true
FEEDBACK_REQUIRED_FOR_LEARNING=true

# ==============================================================================
# SLACK INTEGRATION (Optional)
# ==============================================================================

# Slack Bot Token (starts with xoxb-)
# SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Slack Signing Secret (for webhook verification)
# SLACK_SIGNING_SECRET=your-slack-signing-secret

# Slack App Token (starts with xapp-, for socket mode)
# SLACK_APP_TOKEN=xapp-your-slack-app-token

# ==============================================================================
# RATE LIMITING
# ==============================================================================

# Rate Limit Storage
# For development (in-memory):
RATE_LIMIT_STORAGE_URI=memory://
# For production (Redis recommended):
# RATE_LIMIT_STORAGE_URI=redis://localhost:6379

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Environment (development, staging, production)
# Affects log format: production uses JSON, development uses human-readable
ENVIRONMENT=development

# Log Directory (for audit logs)
LOG_DIR=/var/log/ai-gatekeeper

# ==============================================================================
# FLASK CONFIGURATION
# ==============================================================================

# Flask Debug Mode (true for development, false for production)
FLASK_DEBUG=false

# Host and Port
HOST=0.0.0.0
PORT=5000

# ==============================================================================
# MONITORING & ALERTING
# ==============================================================================

# AI Cost Alert Threshold (USD per day)
AI_COST_ALERT_THRESHOLD=50.0

# ==============================================================================
# OPTIONAL - Feature Flags
# ==============================================================================

# Enable specific features
# ENABLE_AUDIO_SOLUTIONS=true
# ENABLE_IMAGE_ANALYSIS=true
# ENABLE_CODE_ANALYSIS=true

# ==============================================================================
# DEVELOPMENT ONLY
# ==============================================================================

# Skip secret validation (NEVER use in production!)
# SKIP_SECRET_VALIDATION=false
